<div id="home">
<div id="featured_posts" class="carousel slide" data-ride="carousel" data-interval="3000">
	<ol class="carousel-indicators">
		<li data-target="#featured_posts" data-slide-to="0" class="active"></li>
		<li data-target="#featured_posts" data-slide-to="1"></li>
		<li data-target="#featured_posts" data-slide-to="2"></li>
		<li data-target="#featured_posts" data-slide-to="3"></li>
	</ol>
	<div class="carousel-inner" role="listbox">
		<% if @posts[0] %>
			<div class="item active" style="background-image: url('<%= @posts[0].photo.url %>');">
				<a href="/posts/<%= @posts[0].id %>">
				<div class="space"></div>
				<div class="carousel-caption">
					<h2><%= @posts[0].title %></h2>
					<p> by <%= @posts[0].user.username %></p>
				</div>
				</a>
			</div>
		<% end %>
		<% if @posts[1] %>
			<div class="item" style="background-image: url('<%= @posts[1].photo.url %>');">
				<a href="/posts/<%= @posts[1].id %>">
				<div class="space"></div>
				<div class="carousel-caption">
					<h2><%= @posts[1].title %></h2>
					<p> by <%= @posts[1].user.username %></p>
				</div>
				</a>
			</div>
		<% end %>
		<% if @posts[2] $>
			<div class="item" style="background-image: url('<%= @posts[2].photo.url %>');">
				<a href="/posts/<%= @posts[2].id %>">
				<div class="space"></div>
				<div class="carousel-caption">
					<h2><%= @posts[2].title %></h2>
					<p> by <%= @posts[2].user.username %></p>
				</div>
				</a>
			</div>
		<% end %>
		<% if @posts[3] %>
			<div class="item" style="background-image: url('<%= @posts[3].photo.url %>');">
				<a href="/posts/<%= @posts[3].id %>">
				<div class="space"></div>
				<div class="carousel-caption">
					<h2><%= @posts[3].title %></h2>
					<p> by <%= @posts[3].user.username %></p>
				</div>
				</a>
			</div>
		<% end %>
	</div>
	<a class="left carousel-control" href="#featured_posts" role="button" data-slide="prev">
	    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
	    <span class="sr-only">Previous</span>
	  </a>
	  <a class="right carousel-control" href="#featured_posts" role="button" data-slide="next">
	    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
	    <span class="sr-only">Next</span>
	  </a>
</div>
<div class="row">
<% for i in 4..6 %>
<% if @posts[i] %>
<div class="col-md-4">
	<a href="/posts/<%= @posts[i].id %>">
	<div class="posts">
		<% if @posts[i].photo.url != '/images/original/missing.png' %>
		<div class="homethumb" style="background-image: url('<%= @posts[i].photo.url %>');">
